. /etc/default/satnogs-setup

LATEST_CODENAME="buster"
SED_SOURCES_SUBS="s/stretch/buster/
s/Raspbian_9\\.0/Raspbian_10/
s/Debian_9\\.0/Debian_10/"

status=1

upgrade() {
	apt-get update
	if LC_ALL=C apt-get -y -q -s dist-upgrade | grep -q "^The following packages will be upgraded:$" ; then
		apt-get dist-upgrade
		apt-get autoremove
		apt-get autoclean
		status=0
	fi
}

release_upgrade() {
	for _sub in $SED_SOURCES_SUBS; do
		sed -i "$_sub" /etc/apt/sources.list.d/*.list /etc/apt/sources.list
	done
	apt-get update
	apt-get dist-upgrade
	apt-get autoremove
	apt-get autoclean
	status=0
}

upgrade
if [ "$SATNOGS_SETUP_RELEASE_UPGRADE_ENABLED" -eq 1 ] && [ "$(lsb_release -c -s)" != "$LATEST_CODENAME" ]; then
	echo "A new distribution release is available!
WARNING: Release upgrades can consume a lot of time, network data and storage!
Do you want to upgrade release now? [YES/no]"
	while [ -z "$rel_upgrade" ]; do
		read -r _temp
		case "$_temp" in
			YES)
				rel_upgrade=1
				break
				;;
			[Nn][Oo])
				rel_upgrade=0
				break
				;;
			*)
				echo "Please answer 'YES' or 'no'."
				;;
		esac
	done
	if [ "$rel_upgrade" -eq 1 ]; then
		release_upgrade
	fi
fi

exit $status
